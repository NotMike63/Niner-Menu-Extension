{
  "name": "niner-menus",
  "displayName": "Niner Menus",
  "description": "LEAVE BLANK",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:Java"
  ],
  "main": "./extension.js",
  "contributes": {
    "snippets": [
      {
        "language" : "java",
        "path": "./lib/snippets.json"
      }
    ],
    "commands": [
      {
        "command": "niner-menus.downloadJars",
        "title": "Download Jars for 2214"
      },
      {
        "command": "niner-menus.createProject",
        "title": "Create New 2214 Project"
      }
    ],
    "configuration": {
      "title" : "oliver-ni.web-cat-vscode"
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "niner-menus",
          "title": "Niner Menu",
          "icon": "media/Niners.svg"
        }
      ]
    },
    "views": {
      "niner-menus": [
        {
          "id": "niner-file-explorer",
          "name": "Niner File Explorer"
        },
        {
          "id": "2214-menu-window",
          "name": "2214 Commands"
        },
        {
          "id": "niner-test-window",
          "name": "Niner Tests"
        }
      ]
    },
    "menus" : {
      "view/item/context": [

      {
        "command": "workbench.action.files.newUntitledFile",
        "title": "Create a New Project"
      },
      {
        "command": "workbench.action.files.newFolder",
        "title": "Create a New Folder"
      },
      {
        "command": "workbench.action.files.newUntitledFile",
        "title": "Create a New File"
      },
      {
        "command": "java.test.editor.run",
        "title": "Run Tests"
      },
      {
        "command": "workbench.action.debug.run",
        "title": "Run Code"
      },
      {
        "command": "workbench.action.debug.stop",
        "title": "Stop Code"
      },
      {
        "command": "workbench.action.newWindow",
        "title": "New Window"
      },
      {
        "command": "workbench.action.terminal.new",
        "title": "New Terminal"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish" : "npm run compile",
    "compile": "tsx -p ./",
    "watch": "tsc -watch -[ ./",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
}
